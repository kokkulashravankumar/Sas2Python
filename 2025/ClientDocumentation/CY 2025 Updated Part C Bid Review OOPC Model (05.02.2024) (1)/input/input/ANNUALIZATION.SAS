%MACRO ANNUALIZATION(PER,AMT);
  IF &AMT. NE . THEN DO;
    IF &PER. = '1' THEN &AMT. = &AMT. / 3; * EVERY THREE YEARS;
    ELSE IF &PER. = '2' THEN &AMT. = &AMT. / 2; * EVERY TWO YEARS;
    ELSE IF &PER. = '3' THEN &AMT. = &AMT. / 1; * EVERY YEAR;
    ELSE IF &PER. = '4' THEN &AMT. = &AMT. * 2; * EVERY SIX MONTHS;
    ELSE IF &PER. = '5' THEN &AMT. = &AMT. * 4; * EVERY THREE MONTHS;
    ELSE IF &PER. = '6' THEN &AMT. = &AMT.; * OTHER;
    ELSE IF &PER. = '7' THEN &AMT. = &AMT. * 12; * EVERY MONTH;
  END;
%MEND;